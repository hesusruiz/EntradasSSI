<?xml version='1.0' encoding='utf-8'?>
<widget id="es.in2.blockchain.wallet" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Convergence Wallet by IN2</name>
    <description>An awesome Ionic/Cordova app.</description>
    <author email="hi@ionicframework" href="http://ionicframework.com/">Ionic Framework Team</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="ScrollEnabled" value="false" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="Orientation" value="portrait" />
    <preference name="AndroidLaunchMode" value="singleTask" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="resources/android/icon/ic_launcher_APP.png" />
        <icon density="mdpi" src="resources/android/icon/ic_launcher_APP.png" />
        <icon density="hdpi" src="resources/android/icon/ic_launcher_APP.png" />
        <icon density="xhdpi" src="resources/android/icon/ic_launcher_APP.png" />
        <icon density="xxhdpi" src="resources/android/icon/ic_launcher_APP.png" />
        <icon density="xxxhdpi" src="resources/android/icon/ic_launcher_APP.png" />
        <splash density="land-ldpi" src="resources/android/splash/splash-sm.png" />
        <splash density="land-mdpi" src="resources/android/splash/splash-sm.png" />
        <splash density="land-hdpi" src="resources/android/splash/splash-sm.png" />
        <splash density="land-xhdpi" src="resources/android/splash/splash-b.png" />
        <splash density="land-xxhdpi" src="resources/android/splash/splash-b.png" />
        <splash density="land-xxxhdpi" src="resources/android/splash/splash-b.png" />
        <splash density="port-ldpi" src="resources/android/icon/splash.png" />
        <splash density="port-mdpi" src="resources/android/icon/splash.png" />
        <splash density="port-hdpi" src="resources/android/icon/splash.png" />
        <splash density="port-xhdpi" src="resources/android/icon/splash.png" />
        <splash density="port-xxhdpi" src="resources/android/icon/splash.png" />
        <splash density="port-xxxhdpi" src="resources/android/icon/splash.png" />
    </platform>
    <platform name="ios">
